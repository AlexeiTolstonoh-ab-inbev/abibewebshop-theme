{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "props": {
      "blockClass": "footer-container"
    },
    "children": [
      "flex-layout.row#footer-1-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#footer-politics",
      "flex-layout.col#info",
      "flex-layout.col#payment-methods"
    ],
    "props": {
      "blockClass": "footer-menu-row",
      "paddingTop": 6,
      "paddingBottom": 6
    }
  },

  "flex-layout.col#info": {
    "props": {
      "horizontalAlign": "center",
      "verticalAlign": "top",
      "blockClass": "social-container"
    },
    "children": ["rich-text#information","social-networks"]
  },
  "rich-text#information": {
    "props": {
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "text": "Follow us:",
      "blockClass": "footerSocialHeader",
      "font": "t-heading-2"
    }
  },
  "social-networks": {
    "props": {
      "blockClass": "social-items",
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/Dannydelivery-107649328032770"
        },
        {
          "name": "Instagram",
          "url": " https://www.instagram.com/danny.delivery/"
        }
      ]
    }
  },

  "flex-layout.col#payment-methods": {
    "props": {
      "horizontalAlign": "right",
      "verticalAlign": "bottom"
    },
    "children":["accepted-payment-methods"]
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "footer-layout.mobile": {
    "props": {
      "blockClass": "footer-container"
    },
    "children": [
      "flex-layout.row#footer-1-mobile"
    ]
  },
  "flex-layout.row#footer-1-mobile": {
    "children": [
      "vtex.menu@2.x:menu#footer-politics",
      "flex-layout.col#info",
      "flex-layout.col#payment-methods"
    ],
    "props": {
      "blockClass": "footer-menu-row",
      "paddingTop": 6,
      "paddingBottom": 6
    }
  }
}
